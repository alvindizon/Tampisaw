<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation_main"
    app:startDestination="@id/gallery_nav_graph">

    <include app:graph="@navigation/gallery_nav_graph" />

    <include app:graph="@navigation/details_nav_graph" />

    <include app:graph="@navigation/collections_nav_graph" />

    <fragment
        android:id="@+id/search_dest"
        android:name="com.alvindizon.tampisaw.features.search.SearchFragment"
        android:label="fragment_search">

        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>

        <action
            android:id="@+id/detailsAction"
            app:destination="@id/details_dest" />

        <action
            android:id="@+id/collectionAction"
            app:destination="@id/collection_dest" />

    </fragment>

</navigation>
