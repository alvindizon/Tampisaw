<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="ImageCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">@dimen/margin_1</item>
        <item name="android:layout_marginTop">@dimen/margin_1</item>
        <item name="android:layout_marginRight">@dimen/margin_1</item>
    </style>

    <!-- Bottom Sheets -->
    <style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.Theme.BottomSheet.Modal</item>
        <item name="android:listDivider">@color/color_divider</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="Widget.Theme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!-- Text styles -->
    <style name="ToolbarTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitleStyle.Dark">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="GalleryTextStyle">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="GalleryTextStyle.Title" parent="GalleryTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollectionListTextStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:translationZ">1dp</item>
    </style>

    <style name="CollectionListTextStyle.Title" parent="CollectionListTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>